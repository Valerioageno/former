{
  "name": "form-er",
  "version": "0.1.0",
  "author": "Valerio Ageno <valerioageno@yahoo.it>",
  "module": "dist/former.esm.js",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "description": "Super fast ReactJS forms with almost null overhead.",
  "keywords": [
    "ReactJS",
    "form"
  ],
  "homepage": "https://github.com/Valerioageno/former",
  "repository": {
    "type": "git",
    "url": "https://github.com/Valerioageno/former"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch --transpileOnly",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint . --ext ts --ext tsx -c .eslintrc",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit -- --why",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "markdownlint": "markdownlint-cli2",
    "prepublish": "yarn clean && yarn build",
    "clean": "rm -rf ./dist"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx|md|js)": [
      "yarn format"
    ],
    "*.@(ts|tsx|js)": [
      "yarn lint"
    ],
    "!(CHANGELOG).md": [
      "yarn markdownlint"
    ]
  },
  "size-limit": [
    {
      "path": "dist/former.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/former.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-exports": "^0.8.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "markdownlint-cli2": "^0.6.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
